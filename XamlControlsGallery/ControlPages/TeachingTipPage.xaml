            <local:ControlExample.Example>
                <Button Content="Test" Click="TestButtonClick1" />
            </local:ControlExample.Example>
        </local:ControlExample>

        <local:ControlExample x:Name="Example2" HeaderText="Show a non-targeted TeachingTip with buttons." XamlSource="TeachingTip/TeachingTipSample2_xaml.txt"
                              CSharpSource="TeachingTip/TeachingTipSample2_cs.txt">
            <local:ControlExample.Example>
                <Button Content="Test" Click="TestButtonClick2" />
            </local:ControlExample.Example>
        </local:ControlExample>

        <local:ControlExample x:Name="Example3" HeaderText="Show a targeted TeachingTip with hero content on the Toggle Theme button." XamlSource="TeachingTip/TeachingTipSample3_xaml.txt"
                              CSharpSource="TeachingTip/TeachingTipSample3_cs.txt">
            <local:ControlExample.Example>
                <Button Content="Test" Click="TestButtonClick3" />
            </local:ControlExample.Example>
        </local:ControlExample>

